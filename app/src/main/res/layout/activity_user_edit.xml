<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".User_Edit">

    <ImageView
        android:id="@+id/backIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="29dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/home_btn" />

    <FrameLayout
        android:id="@+id/userFrame"
        android:layout_width="278dp"
        android:layout_height="270dp"
        android:layout_marginStart="66dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="66dp"
        android:background="@drawable/border_style"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/backIcon">

        <ImageView
            android:id="@+id/updateUserImage"
            android:layout_width="245dp"
            android:layout_height="229dp"
            tools:srcCompat="@tools:sample/avatars" />
    </FrameLayout>

    <ImageButton
        android:id="@+id/imageUploadbtn"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/userFrame"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@null"
        app:srcCompat="@drawable/camera" />

    <TextView
        android:id="@+id/imageView8"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="55dp"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:textSize="20sp"
        android:fontFamily="@font/ketibah"
        android:background="@drawable/border_style"
        android:padding="10dp"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageUploadbtn" />
    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/baseline_person_2_24"
        app:layout_constraintStart_toStartOf="@id/imageView8"
        app:layout_constraintBottom_toBottomOf="@id/imageView8"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="16dp" />
    <EditText
        android:id="@+id/updateUserName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Name..."
        android:background="@null"
        android:textColor="#000000"
        android:textColorHint="#808080"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/imageView8"
        app:layout_constraintEnd_toEndOf="@id/imageView8"
        app:layout_constraintTop_toTopOf="@id/imageView8"
        android:layout_marginStart="59dp"
        android:layout_marginEnd="14dp"
        app:layout_constraintBottom_toBottomOf="@id/imageView8"
        android:drawablePadding="8dp"
        android:inputType="textPersonName" />

<!--    llllllllllllllllll-->


    <TextView
        android:id="@+id/imageView10"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="55dp"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:textSize="20sp"
        android:fontFamily="@font/ketibah"
        android:background="@drawable/border_style"
        android:padding="10dp"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView8" />

    <EditText
        android:id="@+id/updateUserPhone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Contact No"
        android:background="@null"
        android:textColor="#000000"
        android:textColorHint="#808080"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/imageView10"
        app:layout_constraintEnd_toEndOf="@id/imageView10"
        app:layout_constraintTop_toTopOf="@id/imageView10"
        android:layout_marginStart="59dp"
        android:layout_marginEnd="14dp"
        app:layout_constraintBottom_toBottomOf="@id/imageView10"
        android:drawablePadding="8dp"
        android:inputType="phone" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/baseline_local_phone_24"
        app:layout_constraintStart_toStartOf="@id/imageView10"
        app:layout_constraintBottom_toBottomOf="@id/imageView10"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/imageView12"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="55dp"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:textSize="20sp"
        android:fontFamily="@font/ketibah"
        android:background="@drawable/border_style"
        android:padding="10dp"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView10" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/baseline_email_24"
        app:layout_constraintStart_toStartOf="@id/imageView12"
        app:layout_constraintBottom_toBottomOf="@id/imageView12"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/updateUserEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Email..."
        android:enabled="false"
        android:background="@null"
        android:textColor="#000000"
        android:textColorHint="#808080"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/imageView12"
        app:layout_constraintEnd_toEndOf="@id/imageView12"
        app:layout_constraintTop_toTopOf="@id/imageView12"
        android:layout_marginStart="59dp"
        android:layout_marginEnd="14dp"
        app:layout_constraintBottom_toBottomOf="@id/imageView12"
        android:drawablePadding="8dp"
        android:inputType="phone" />



    <ImageButton
        android:id="@+id/updateUserButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@null"
        app:srcCompat="@drawable/update_btn"
        app:layout_constraintTop_toBottomOf="@id/imageView12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="28dp"
        android:layout_marginTop="30dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
